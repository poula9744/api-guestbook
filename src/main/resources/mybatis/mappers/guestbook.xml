<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="guestbook">

	<!-- 전체리스트 -->
	<select id="list" resultType="com.javaex.vo.GuestbookVo">
	<![CDATA[
		select no
				,name
           	    ,password
           	    ,content
            	,reg_date regDate
		from guestbook
		order by no desc
	]]>
	</select>


	<!-- 삭제 -->
	<insert id="delete" parameterType="com.javaex.vo.GuestbookVo">
      <![CDATA[ 
         delete from guestbook
         where no=#{no}
         and password=#{password}
      ]]>
	</insert>


	<!-- 번호받고 저장하기 ajax -->
	<insert id="insertSelectKey" parameterType="com.javaex.vo.GuestbookVo">
      <![CDATA[   
          insert into guestbook
              values ( null, #{name }, #{password }, #{content }, now() )
       ]]>

		<selectKey keyProperty="no" resultType="int" order="AFTER">   
          <![CDATA[
            select last_insert_id()
            ]]>
		</selectKey>
	</insert>


	<!-- 데이터1개 가져오기 -->
	<select id="selectOne" parameterType="int" resultType="com.javaex.vo.GuestbookVo">
      <![CDATA[
         select  no,
                 name,
                 password,
                 content,
                 reg_date regDate
         from guestbook
         where no = #{no}
      ]]>
	</select>


</mapper>